@import "../../assets/stylus/mixin.styl";
.detailsWrapper
  position: fixed
  left: 0
  top: 0
  bottom: 48px
  z-index: 30
  width:100%
  background: #fff
  transition:all 0.5s
  transform translate3d(0,0,0)
  &.fade-enter-active,&.fade-leave-active
    transform translate3d(0,0,0)
  &.fade-enter,&.fade-leave-active
    transform translate3d(0,-100%,0)
  .foodDetails
    background #fff
    .foodContent
      .banner
        //设置宽高相等的容器
        position relative
        width:100%
        height 0
        padding-top 100%
        img
          position: absolute
          left:0
          top:0
          width:100%
          height:100%
        .back
          position: absolute
          left: 10px
          top: 30px
          padding: 10px
          font-size 20px
          color: #fff
          font-weight 700
      .foodinfo
        position: relative
        padding 18px
        .name
          line-height 14px
          margin-bottom 8px
          font-size: 14px
          font-weight 700
          color: rgb(7,17,27)
        .priceWrapper
          .extra,.price
            font-size:12px
          .extra
            padding-bottom: 18px
        .btnWrapper
          position: absolute
          right: 10px
          bottom: 15px
        .addToCart
          position: absolute
          right: 10px
          bottom: 15px
          z-index: 10//为什么设置10？
          padding: 6px
          border-radius 12px
          font-size 10px
          background: rgb(0,160,220)
          color: #fff
    .desc
      width:100%
      padding:0 5%
      box-sizing border-box
      .title
        height: 24px
        line-height 24px
        padding 15px 0 5px 0
        font-weight 700
      .content
        line-height 24px
        font-size 10px
        color: rgb(77,85,93)
    .evaluation
      box-sizing border-box
      width: 100%
      padding: 0 5%
      .title
        height: 48px
        line-height 48px
        font-weight 700
      .ratingLists
        .hasRatings
          .ratingItem
            padding-bottom 10px
            border-1px(rgba(7,17,27,.1))
            .top
              display: flex
              justify-content space-between
              height: 30px
              line-height: 30px
              padding:10px 0
              .time
                display: inline-block
                font-size 10px
              .userInfo
                font-size: 0
                .id
                  display: inline-block
                  vertical-align top
                  font-size: 10px
                .avatar
                  display inline-block
                  width: 20px
                  height: 20px
                  vertical-align top
                  margin-top:6px
                  margin-left:5px
                  border-radius 50%
            .comment
              font-size 0
              .iconfont
                display:inline-block
                font-size: 12px
                margin-right:5px
              .good
                color: #00a0dc
              .bad
                color: rgba(7,17,27,.6)
              .content
                display inline-block
                font-size: 10px



      .noRating
        line-height: 24px
        padding: 20px 0
        font-size: 10px
        color:rgba(7,17,27,.8)
