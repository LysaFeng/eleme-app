@import '../../assets/stylus/mixin';
.star
  font-size:0
  //关于不同child级公共元素放入grandpa级时，放置位置？？？？，如何处理这种公共样式与parent之间的层级位置关系
  .star-48
    .starItem
      display:inline-block
      background-repeat:no-repeat
      width: 20px
      height: 20px
      margin-right:20px
      background-size:20px 20px
      &:last-child
        margin-right 0
      &.on
        bg-images("star48_on")
      &.half
        bg-images("star48_half")
      &.off
        bg-images("star48_off")
