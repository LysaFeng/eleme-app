@import "../../../assets/stylus/mixin.styl";
.ratingsWrapper
  .ratingsType
    font-size: 0
    padding-bottom 18px
    border-1px(rgba(7,17,27,.1))
    .type
      display inline-block
      padding: 10px 15px
      margin-right: 10px
      font-size: 12px
      border-radius 2px
      &.active
        color:#fff
      .num
        display inline-block
        margin-left:4px
        font-style:normal
        font-size:10px
    .all
      background rgb(0, 160, 220)
    .good
      background rgba(0, 160, 220, 0.2)
      &.active
        background: rgb(0,160,220)
    .bad
      background rgba(77, 85, 93, 0.2)
      &.active
        background: rgb(77,85,93)
  .switch
    font-size 0
    padding: 20px 0
    border-1px(rgba(7,17,27,.1))
    span
      display inline-block
      font-size: 12px
      color: rgb(147, 153, 150)
    .icon-gou
      font-size: 16px
      vertical-align top
      margin-top: -3px
      margin-right: 5px
      &.active
        color:#00c850
    .text
      vertical-align: top
