@import "../../assets/stylus/mixin.styl"
.seller
  position: fixed
  top: 174px
  left: 0
  bottom:0
  width: 100%
  overflow: hidden
  .sellerWrapper
    .summary
      position:relative
      .top
        padding: 18px 0
        margin: 0 18px
        border-1px(rgba(7,17,27,.1))
        .name
          line-height 14px
          font-size: 14px
          color: rgb(7, 17, 27)
        .quantity
          line-height 18px
          padding-top 8px
          font-size 0
          .star
            display: inline-block
            vertical-align top
            .starItem
              margin-right 8px
          .ratingCount
            display: inline-block
            margin:0 12px 0 8px
            font-size 10px
          .salesCount
            display inline-block
            font-size 10px
            color: rgb(77, 85, 93)
        .favorite
          position: absolute
          right: 8px
          top: 12px
          span
            display block
            width: 50px
            text-align center
          .iconfont
            font-size 20px
            color: rgba(7,17,27,.2)
            &.collected
              color: rgb(240, 20, 20)
          .text
            font-size 10px
            line-height 40px
            color: rgb(7,17,27)
      .bottom
        display: flex
        justify-content space-around
        padding 18px
        text-align center
        //border-1px(rgba(7,17,27,.1))
        .left,.middle,.right
          flex:1
          .text
            padding-bottom 4px
            color: rgb(147,153,159)
            font-size: 10px
            line-height 10px
          .number
            line-height 24px
            font-size 24px
            color: rgb(7, 17, 27)
            font-weight:200
            .unit
              font-size:10px
        .middle
          border: 1px solid rgba(7,17,27,.1)
          border-top: none
          border-bottom: none
    .bulletin
      padding:18px
      .title
        line-height 14px
        font-size: 14px
        color: rgb(7, 17, 27)
        padding-bottom: 8px
      .content
        padding:12px
        line-height 24px
        font-size 12px
        font-weight 200
        color: rgb(240,20,20)
        border-1px(rgba(7,17,27,.1))
      .promotionItem
        font-size 0
        line-height 16px
        padding:12px
        border-1px(rgba(7,17,27,.1))
        &:last-child
          border-none()
        .icon
          display inline-block
          width: 16px
          height 16px
          margin-right: 6px
          vertical-align: top
          background-size:16px 16px
          &.decrease
            bg-images("decrease_4")
          &.discount
            bg-images('discount_4')
          &.guarantee
            bg-images('guarantee_4')
          &.invoice
            bg-images('invoice_4')
          &.special
            bg-images('special_4')
        .description
          display: inline-block
          vertical-align: top
          font-size 12px
          font-weight: 200
          color: rbg(7,17,27)
    .banner
      padding:18px
      .title
        padding-bottom 12px
        line-height 14px
        font-size: 14px
        color: rgb(7, 17, 27)
      .picsWrapper
        width: 100%
        white-space nowrap
        overflow hidden
        .picItem
          display inline-block
          width: 120px
          height 90px
          margin-right 6px
          &:last-child
            margin-right: 0
          img
            width: 100%
            height 100%
    .sellerInfos
      padding:0 18px
      .title
        padding: 16px 0
        line-height 14px
        font-size: 14px
        color: rgb(7, 17, 27)
        padding-bottom: 8px
        border-1px(rgba(7,17,27,.1))
      .infoItem
        line-height 16px
        padding:12px
        border-1px(rgba(7,17,27,.1))
        .description
          display: inline-block
          font-size 12px
          font-weight: 200
          color: rbg(7,17,27,.1)
    .tip
      text-align center
      height 48px
      line-height 48px
      font-size 10px
      color: rgba(7,17,27,.6)
